\language@definecolor{github}     {211F1F}
\language@definecolor{jupyter}    {EB7325}
\language@definecolor{nodejs}     {3C873A}
\language@definecolor{pycharm}    {18D68C}
\language@definecolor{nodejs}     {3C873A}
