\newcommand\languagePalette[1][3em]{%
	\newcommand\language@squircle{%
		\tikz\fill[rounded corners=1em] (0,0) rectangle (#1, #1);
	}
	\newcommand\language@showcolor[1]{%
		\textcolor{\language@prefix ##1}{\language@squircle}%
	}
	\noindent\hfill%
	\begin{tabular}{cccccc}%
		\language@showcolor{sass} &
		\language@showcolor{typescript} &
		\language@showcolor{html} &
		\language@showcolor{css} &
		\language@showcolor{javascript} &
		\language@showcolor{python} \\
		sass & typescript & html &
		css & javascript & python \\[#1]
		\language@showcolor{flask}   &
		\language@showcolor{github} &
		\language@showcolor{jupyter} &
		\language@showcolor{nodejs}  &
		\language@showcolor{pycharm}   &
		\language@showcolor{nodejs} \\
		flask  & github & jupyter &
		nodejs & pycharm   & nodejs %
	\end{tabular}%
	\hfill%
}

