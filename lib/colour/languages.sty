\NeedsTeXFormat{LaTeX2e}[2011/06/27]
\ProvidesPackage{languages}[
	Definitions for language brand colour.
]

\RequirePackage{
	xcolor,
	color,
	tikz,
}

\RequirePackage{kvoptions}
\SetupKeyvalOptions{
	family=language,
	prefix=language@
}

\DeclareStringOption[language-]{prefix}
\DeclareDefaultOption{%
	\OptionNotUsed
	\PackageError{languages}{Unknown `\CurrentOption' option}
}
\ProcessKeyvalOptions*

\newcommand\language@definecolor[2]{
	\expandafter\definecolor\expandafter{\language@prefix #1}{HTML}{#2}
}

\language@definecolor{sass}       {CC6699}
\language@definecolor{typescript} {2B7489}
\language@definecolor{html}       {E34C26}
