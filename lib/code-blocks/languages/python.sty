	keywords=[2]{str},
	keywordstyle=[2]\slshape\color{monokai-blue},
	keywords=[3]{self},
	keywordstyle=[3]\slshape\color{monokai-grey-light},
	keywords=[4]{},
	keywordstyle=[4]\color{monokai-orange},
	keywords=[5]{},
