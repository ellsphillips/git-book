\ProvidesPackage{beamerfontthemeepons}

% Title Page
\setbeamerfont{title}{family=\sffamily, series=\sfshape, size=\huge}
\setbeamerfont{subtitle}{size=\Large}
\setbeamerfont{date}{size=\footnotesize}
\setbeamerfont{author}{size=\Large}
\setbeamerfont{institute}{size=\tiny}

% Section
\setbeamerfont{section title}{size=\Large}

% Content
\setbeamerfont{frametitle}{family=\sffamily, size=\Large}
\setbeamerfont{headline section}{family=\sffamily, size=\scriptsize}
\setbeamerfont{copyright text}{size=\tiny}
\newcommand{\addheight}{\parbox{0pt}{\rule[-0.5ex]{0pt}{2.5ex}}}
\setbeamerfont{block title}{series=\sffamily\addheight, size=\large}
\setbeamerfont{block title alerted}{family=\sffamily, size=\large}
\setbeamerfont{alerted text}{series=\sffamily}%, series=\bfseries}
\setbeamerfont{block title example}{family=\sffamily, size=\large}
\setbeamerfont{example text}{series=\scshape}

\setbeamerfont{caption}{size=\small}
\setbeamerfont{caption name}{family=\small}

\setbeamerfont{page number in head/foot}{size=\scriptsize}


\linespread{1.15}
